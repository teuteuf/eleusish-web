{
   "compileOnSave": false,
   "compilerOptions": {
      "lib": ["es6"],
      "target": "es6",
      "module": "commonjs",
      "esModuleInterop": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "typeRoots": ["node_modules/@types"],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
   },
   "include": ["typings.d.ts", "server/**/*.ts"],
   "exclude": ["node_modules"]
}
